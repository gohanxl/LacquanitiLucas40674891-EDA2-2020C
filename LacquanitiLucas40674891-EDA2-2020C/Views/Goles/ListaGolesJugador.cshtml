@model IEnumerable<Repositories.GolesPorJugadorEquipo>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <form method="get" action="/Goles/AltaGolesJugador" class="d-flex align-items-center justify-content-between mb-3">
        <label for="registro-goles">Crear Nuevo Registro de Goles</label>
        <button class="btn btn-primary" type="submit" name="registro-goles">
           Agregar
        </button>
    </form>
    <table id="table" class="table table-striped table-responsive w-100">
        <thead>
            <tr>
                <th>Equipo</th>
                <th>Cantidad de Goles</th>
                <th>Jugador (Nombre)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var gol in Model)
            {
                <tr>
                    <td>@gol.Equipo</td>
                    <td>@gol.CantidadGoles</td>
                    <td>@gol.Jugador.Nombre</td>
                </tr>
            }
        </tbody>
    </table>
</section>


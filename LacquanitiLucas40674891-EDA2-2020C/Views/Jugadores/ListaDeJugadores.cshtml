@model IEnumerable<Repositories.Jugador>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <form method="get" action="/Jugadores/AltaJugador" class="d-flex align-items-center justify-content-between mb-3">
        <label for="agregar-jugador">Agregar Jugador</label>
        <button class="btn btn-primary" type="submit" name="agregar-jugador">
            Agregar
        </button>
    </form>
    <table id="table" class="table table-striped table-responsive w-100">
        <thead>
            <tr>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var jugador in Model)
            {
                <tr>
                    <td>@jugador.Nombre</td>
                </tr>
            }
        </tbody>
    </table>
</section>

